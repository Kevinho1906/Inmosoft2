<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_cotizar_proyecto">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cotizar Proyecto"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <EditText
        android:id="@+id/txtCedulaCotizarProyecto"
        android:layout_width="390dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/personalizado"
        android:hint="Cedula"
        android:inputType="number"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtNombreCotizarProyecto"
        android:layout_width="390dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/personalizado"
        android:padding="8dp"
        android:hint="Nombre(s)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCedulaCotizarProyecto" />

    <EditText
        android:id="@+id/txtApellidoCotizarProyecto"
        android:layout_width="390dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/personalizado"
        android:hint="Apellido(s)"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreCotizarProyecto" />

    <EditText
        android:id="@+id/txtTelefonoCotizarProyecto"
        android:layout_width="390dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/personalizado"
        android:hint="Numero de celular"
        android:inputType="number"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidoCotizarProyecto" />

    <EditText
        android:id="@+id/txtCorreoCotizarProyecto"
        android:layout_width="390dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/personalizado"
        android:padding="8dp"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefonoCotizarProyecto" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="390dp"
        android:layout_height="241dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/personalizado"
        android:padding="8dp"
        android:text="'Le solicitamos ciertos datos personales con el único propósito de procesar su solicitud y contactarnos con usted. Queremos asegurarle que sus datos serán tratados con la máxima confidencialidad y seguridad. Cumplimos con todas las leyes de privacidad de datos y hemos implementado medidas para proteger sus datos'"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoCotizarProyecto" />

    <Button
        android:id="@+id/btnEnviarCotizacion"
        android:layout_width="104dp"
        android:layout_height="67dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.276" />

</androidx.constraintlayout.widget.ConstraintLayout>